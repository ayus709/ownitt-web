    <!-- JavaScript -->
    <script>
        // Modal Functions
        function openModal(modalId) {
            document.getElementById(modalId).classList.add('show');
            document.body.style.overflow = 'hidden';
        }
        
        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('show');
            document.body.style.overflow = 'auto';
        }
        
        // Form Submission
        function submitForm(event, formType) {
            event.preventDefault();
            
            // Create email data based on form type
            let subject = '';
            let body = '';
            
            if (formType === 'service') {
                const name = document.getElementById('service-name').value;
                const phone = document.getElementById('service-phone').value;
                const address = document.getElementById('service-address').value;
                const serviceType = document.getElementById('service-type').value;
                
                subject = 'Service Request – OWNITT Ltd.';
                body = `Name: ${name}%0D%0APhone: ${phone}%0D%0AAddress: ${address}%0D%0AService Type: ${serviceType}`;
                closeModal('serviceModal');
            } 
            else if (formType === 'quotation') {
                const name = document.getElementById('quotation-name').value;
                const phone = document.getElementById('quotation-phone').value;
                const address = document.getElementById('quotation-address').value;
                const product = document.getElementById('product-interest').value;
                
                subject = 'New RO Quotation Request – OWNITT Ltd.';
                body = `Name: ${name}%0D%0APhone: ${phone}%0D%0AAddress: ${address}%0D%0AProduct Interest: ${product}`;
                closeModal('quotationModal');
            }
            else if (formType === 'enquiry') {
                const name = document.getElementById('enquiry-name').value;
                const contact = document.getElementById('enquiry-contact').value;
                const message = document.getElementById('enquiry-message').value;
                
                subject = 'General Enquiry – OWNITT Ltd.';
                body = `Name: ${name}%0D%0AContact: ${contact}%0D%0AMessage: ${message}`;
                closeModal('enquiryModal');
            }
            else if (formType === 'contact') {
                const name = document.getElementById('name').value;
                const email = document.getElementById('email').value;
                const phone = document.getElementById('phone').value;
                const subject = document.getElementById('subject').value;
                const message = document.getElementById('message').value;
                
                subject = `Contact Form: ${subject}`;
                body = `Name: ${name}%0D%0AEmail: ${email}%0D%0APhone: ${phone}%0D%0AMessage: ${message}`;
            }
            
            // In a real implementation, this would send data to a server
            // For demo purposes, we'll show a success modal
            openModal('successModal');
            
            // Reset form
            event.target.reset();
            
            // In a real implementation, you would send an email:
            // window.location.href = `mailto:ownittshopping@gmail.com?subject=${subject}&body=${body}`;
        }
        
        // Smooth scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
    </script>
</body>
</html>
